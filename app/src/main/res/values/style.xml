<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextCardView" parent="Theme.AppCompat">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="TextFragment" parent="Theme.AppCompat">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="LabelTextFragment" parent="Theme.AppCompat">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBAcrBackgrounColor</item>
        <item name="tabIndicator">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>